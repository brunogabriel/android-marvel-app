<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MarvelApp" parent="Theme.MarvelApp.Default">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!-- TODO -->
        <item name="colorOnPrimary">@android:color/black</item> <!-- TODO -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>  <!-- TODO -->
        <item name="colorOnSecondary">@android:color/black</item>  <!-- TODO -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Shared themes -->
    <style name="Theme.MarvelApp.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/Theme.MarvelApp.AppStyleTextView</item>
        <item name="fontFamily">@font/notosans</item>
    </style>

    <style name="Theme.MarvelApp.AppStyleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="Theme.MarvelApp.BottomNavigation.Active" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosans_medium</item>
    </style>

    <style name="Theme.MarvelApp.BottomNavigation.Inactive" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosans_light</item>
    </style>

    <style name="Theme.MarvelApp.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="Theme.MarvelApp.Toolbar">
        <item name="titleTextAppearance">@style/Theme.MarvelApp.Toolbar.Title</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="theme">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>

</resources>